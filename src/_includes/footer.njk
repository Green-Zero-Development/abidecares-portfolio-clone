                </a>
                <a href="{% for item in social[0].acf.value_list %}{% if item.type == "Facebook" %}{{ item.value }}{% endif %}{% endfor %}" target="_blank">
                    <svg class="w-4" fill="#F6F4EE" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><!--! Font Awesome Pro 6.0.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M400 32H48A48 48 0 0 0 0 80v352a48 48 0 0 0 48 48h137.25V327.69h-63V256h63v-54.64c0-62.15 37-96.48 93.67-96.48 27.14 0 55.52 4.84 55.52 4.84v61h-31.27c-30.81 0-40.42 19.12-40.42 38.73V256h68.78l-11 71.69h-57.78V480H400a48 48 0 0 0 48-48V80a48 48 0 0 0-48-48z"/></svg>
                </a>
            </div>
        </div>
    </div>
</footer>

<script>
const zipSearchForm = document.getElementById('zip-search-form');
const zipSearchFormFooter = document.getElementById('zip-search-form-footer');
const zipIncorrect = document.getElementById('zip-incorrect');
const zipIncorrectFooter = document.getElementById('zip-incorrect-footer');

function zipSearch(zipValue) {
    if (zipValue.length < 5 || zipValue.length > 5) {
        zipIncorrectFooter.classList.remove('opacity-0');
        zipIncorrect.classList.remove('opacity-0');
    } else {
        window.location.href = '/zip-results/?ziptosearch=' + zipValue;
    }
}

if (zipSearchForm) {
    zipSearchForm.addEventListener('submit', function(e) {
        e.preventDefault();
        var zipValue = this.querySelector('#zip-to-search').value;
        zipSearch(zipValue);
    });
}

if (zipSearchFormFooter) {
    zipSearchFormFooter.addEventListener('submit', function(e) {
        e.preventDefault();
        var zipValue = this.querySelector('#zip-to-search').value;
        zipSearch(zipValue);
    });
}
</script>