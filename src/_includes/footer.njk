{% set logos = [] %}
{% set social = [] %}
{% for item in globalData %}
    {% if item.title == "Logos" %}
        {% set logos = (logos.push({id: item.id, title: item.title, acf: item.acf}), logos) %}
    {% elseif item.title == "Social Media Links" %}
        {% set social = (social.push({id: item.id, title: item.title, acf: item.acf}), social) %}
    {% endif %}
{% endfor %}

