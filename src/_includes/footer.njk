    <div class="absolute top-0 left-0 w-full h-56 -mt-16 mobile-menu-curve"></div>
    <div class="relative bg-navy pt-10 pb-40 lg:pb-1 px-6 sm:px-8">
        {% include "global/pre-footer-section.html" %}
        <div class="w-full h-1 max-w-8xl opacity-50 bg-cream mt-20 mb-6 mx-auto"></div>
        <div class="flex flex-wrap w-full items-start max-w-8xl mx-auto py-12">
            <a href="/">
                <img class="py-4 mr-16" src="{{ logos[0].acf.footer_logo.url }}" />
            </a>
            <ul class="py-4 mr-5 lg:mr-8">
                {% for item in menus.footerMenu %}
                    <a href="{{ item.url }}">
                        <h6 class="pb-2 footer-link">{{ item.title }}</h6>
                    </a>
                    <div class="flex">
                        <div class="">
                            {% for item1 in item.children %}
                                {% if loop.index <= 4 %}
                                <a href="{{ item1.url }}">
                                    <li class="pr-8 footer-sub-link">{{ item1.title }}</li>
                                </a>
                                {% endif %}
                            {% endfor %}
                        </div>
                        <div class="">
                            {% for item1 in item.children %}
                                {% if loop.index > 4 %}
                                <a href="{{ item1.url }}">
                                    <li class="footer-sub-link">{{ item1.title }}</li>
                                </a>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </ul>
            <ul class="py-4 mr-5 lg:mr-8">
                {% for item in menus.footerMenuTwo %}
                    <a href="{{ item.url }}">
                        <h6 class="pb-2 footer-link">{{ item.title }}</h6>
                    </a>
                    <div class="flex">
                        <div class="">
                            {% for item1 in item.children %}
                                {% if loop.index <= 4 %}
                                <a href="{{ item1.url }}">
                                    <li class="pr-8 footer-sub-link">{{ item1.title }}</li>
                                </a>
                                {% endif %}
                            {% endfor %}
                        </div>
                        <div class="">
                            {% for item1 in item.children %}
                                {% if loop.index > 4 %}
                                <a href="{{ item1.url }}">
                                    <li class="footer-sub-link">{{ item1.title }}</li>
                                </a>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </ul>
            <ul class="py-4 mr-5 lg:mr-8">
                {% for item in menus.footerMenuThree %}
                    <a href="{{ item.url }}">
                        <h6 class="pb-2 footer-link">{{ item.title }}</h6>
                    </a>
                    <div class="flex">
                        <div class="">
                            {% for item1 in item.children %}
                                {% if loop.index <= 4 %}
                                <a href="{{ item1.url }}">
                                    <li class="pr-8 footer-sub-link">{{ item1.title }}</li>
                                </a>
                                {% endif %}
                            {% endfor %}
                        </div>
                        <div class="">
                            {% for item1 in item.children %}
                                {% if loop.index > 4 %}
                                <a href="{{ item1.url }}">
                                    <li class="footer-sub-link">{{ item1.title }}</li>
                                </a>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </ul>
            <div class="relative py-4 xl:ml-auto">
                <form id="zip-search-form-footer" class="">
                    <input type="text" id="zip-to-search" placeholder="Enter Zip Code" class="w-full mb-4 mr-3 zip-code-input"/>
                    <input type="submit" value="Find Service" class="outline-submit-button" />
                    <div class="relative">
                        <div id="zip-incorrect-footer" class="absolute left-0 opacity-0 mt-3 pb-6 zip-search-error">
                            <div class="absolute top-0 zip-search-module-arrow"></div>
                            The typed zip code is incorrect, please re-enter.
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="flex flex-wrap justify-between max-w-8xl mx-auto pt-8">
            <div class="flex flex-wrap w-full md:w-auto pb-8 policy-text">
                &copy; <span id="copyright-date" class="pr-1"></span> Georgia Living At Home, LLC
                <a href="/privacy" class="w-full md:w-auto pt-6 pb-6 md:pt-0 md:pb-2 md:px-12">
                    Privacy Policy
                </a>
                <a href="/terms" class="w-full md:w-auto pb-6 md:pb-2 md:pr-12">
                    Terms & Conditions
                </a>
            </div>
            <div class="flex">
