            <script src="https://www.cognitoforms.com/f/seamless.js" data-key="IG83lPQs7UKU2FDeP--HlA" data-form="29"></script>
        </div>
        <div id="other-inquiry-form" class="hidden max-w-8xl mx-auto py-12 px-6 contact-page-form">
            <h4 class="text-5xl xl:text-h3-init capitalize text-center pb-12">Other Inquiries</h4>
            <script src="https://www.cognitoforms.com/f/seamless.js" data-key="IG83lPQs7UKU2FDeP--HlA" data-form="30"></script>
        </div>
    </div>
</div>

<script>
const formTrigButtons = document.querySelectorAll('.form-trig-button');
const employmentForm = document.getElementById('employment-inquiry-form');
const careInquiryForm = document.getElementById('care-inquiry-form');
const otherInquiryForm = document.getElementById('other-inquiry-form');
for (let i = 0; i < formTrigButtons.length; i++) {
    formTrigButtons[i].addEventListener("click", function() {
        employmentForm.classList.add('hidden');
        careInquiryForm.classList.add('hidden');
        otherInquiryForm.classList.add('hidden');
        for (let i2 = 0; i2 < formTrigButtons.length; i2++) {
            formTrigButtons[i2].querySelector('.outline-button').classList.remove('active-contact-form-button');
        }
        formTrigButtons[i].querySelector('.outline-button').classList.add('active-contact-form-button');
        if (this.id == "employmentForm") {
            employmentForm.classList.remove('hidden');
            employmentForm.scrollIntoView({behavior: "smooth", block: "end", inline: "nearest"});
        } else if (this.id == "careInquiryForm") {
            careInquiryForm.classList.remove('hidden');
            careInquiryForm.scrollIntoView({behavior: "smooth", block: "end", inline: "nearest"});
        } else if (this.id == "otherInquiryForm") {
            otherInquiryForm.classList.remove('hidden');
            otherInquiryForm.scrollIntoView({behavior: "smooth", block: "end", inline: "nearest"});
        }
    })
}
</script>

