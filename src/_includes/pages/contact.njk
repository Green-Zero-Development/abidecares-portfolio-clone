<script>
    const employmentFormTrig = document.getElementById('employmentForm').querySelector('.outline-button');
    const careFormTrig = document.getElementById('careInquiryForm').querySelector('.outline-button');
    const otherFormTrig = document.getElementById('otherInquiryForm').querySelector('.outline-button');

    const queryString = window.location.search;
    const urlParams = new URLSearchParams(queryString);
    const linkReason = urlParams.get('linkreason');
    if (linkReason === "employment") {
        employmentFormTrig.click();
    }
    if (linkReason === "care") {
        careFormTrig.click();
    }
    if (linkReason === "other") {
        otherFormTrig.click();
    }
</script>