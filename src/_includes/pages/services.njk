                        {% elseif wpage.heroSection.button.link_to_where == "A file" %}
                                href='{{ wpage.heroSection.button.file_link }}' 
                        target='_blank'
                        {% endif %}
                    >
                        <button class="outline-button">{{ wpage.heroSection.button.text }}</button>
                    </a>
                </div>
            </div>
            <div class="w-full md:w-7/12 md:pl-4 xl:pl-8 ani-services-2">
                <div class="bg-cover bg-center py-24 sm:py-64 service-hero-img"></div>
            </div>
        </div>
    </div>
</div>

<div class="max-w-8xl mx-auto pt-6 md:pt-16 md:px-6 ani-services-trig-2 ani-services-3">
    <div class="flex flex-wrap text-navy">
        {% for item in wpage.serviceList %}
            <div id="{{ item.title | replace(' ', '') }}" class="w-full md:w-1/2 pb-16 px-6">
                <img class="pb-8" src="{{ item.image.url }}" />
                <h6>{{ item.title }}</h6>
                <p class="font-medium pt-4 pb-10 pr-6 lg-p">{{ item.paragraph }}</p>
                <ul class="flex flex-wrap pb-8 px-6 font-thin list-disc">
                    {% for item1 in item.subservices %}
                        <li class="w-full sm:w-1/2 md:w-full lg:w-1/2 pr-5 pb-2">{{ item1.title }}</li>
                    {% endfor %}
                </ul>
                <a 
                    {% if item.button.link_to_where == "A page on this site" %}
                    href='{{ item.button.onsite_link }}'
                    {% elseif item.button.link_to_where == "Another site" %}
                    href='{{ item.button.offsite_link }}' target='_blank'
                    {% elseif item.button.link_to_where == "A file" %}
                            href='{{ item.button.file_link }}' 
                    target='_blank'
                    {% endif %}
                >
                    <button class="flex items-center dark-outline-button">
