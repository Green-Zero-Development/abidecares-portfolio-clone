<div class="bg-cover bg-top bg-no-repeat -mt-32 pt-48 service-hero-bk ani-careers-trig-1">
    <div class="max-w-8xl mx-auto pb-16 px-6 md:px-12 ani-careers-1">
        <style>
            .service-hero-img {
                background-image: url('{{ wpage.heroSection.image.url }}');
                border-radius: 16px;
            }
        </style>
        <div class="flex flex-wrap flex-col-reverse md:flex-row items-start">
            <div class="w-full md:w-5/12 py-12 md:py-0 md:pr-4 xl:pr-8 text-navy ani-careers-2">
                <div class="">
                    <h6 class="text-sm font-thin small-title">{{ wpage.heroSection.pretitle }}</h6>
                    <h1 class="text-5xl xl:text-h1-init capitalize pt-2 pb-4">{{ wpage.heroSection.title }}</h1>
                    <p class="text-base lg:text-lg-p-init lg:leading-normal pb-6">{{ wpage.heroSection.paragraph }}</p>
                    <a class="text-navy font-bold capitalize text-button"
                        {% if wpage.heroSection.button.link_to_where == "A page on this site" %}
                        href='{{ wpage.heroSection.button.onsite_link }}'
                        {% elseif wpage.heroSection.button.link_to_where == "Another site" %}
                        href='{{ wpage.heroSection.button.offsite_link }}' target='_blank'
                        {% elseif wpage.heroSection.button.link_to_where == "A file" %}
                                href='{{ wpage.heroSection.button.file_link }}' 
                        target='_blank'
                        {% endif %}
                    >
                        <button class="outline-button">{{ wpage.heroSection.button.text }}</button>
                    </a>
                </div>
            </div>
            <div class="w-full md:w-7/12 md:pl-4 xl:pl-8">
                <div class="bg-cover bg-center py-24 sm:py-64 service-hero-img"></div>
            </div>
        </div>
    </div>
</div>

