<script>
gsap.set(".ani-careers-1", { y: -20, opacity: 0 });
gsap.set(".ani-careers-2", { y: 20, opacity: 0 });
gsap.set(".ani-careers-3", { y: 20, opacity: 0 });
gsap.set(".ani-careers-4", { y: 20, opacity: 0 });

let aniCareers1 = gsap.timeline({scrollTrigger:{trigger: ".ani-careers-trig-1",start: "top +=100px"}});
aniCareers1.to(".ani-careers-1", {y: 0,opacity: 1, ease: "sine", duration: 0.5}, )
  .to(".ani-careers-2", {y: 0,opacity: 1, ease: "sine", duration: 0.5})
  .to(".ani-careers-3", {y: 0,opacity: 1, ease: "sine", duration: 0.5})
  .to(".ani-careers-4", {y: 0,opacity: 1, ease: "sine", duration: 0.5});

gsap.set(".ani-careers-5", { y: 20, opacity: 0 });

let aniCareers2 = gsap.timeline({scrollTrigger:{trigger: ".ani-careers-trig-2",start: "top +=1000px"}});
aniCareers2.to(".ani-careers-5", {y: 0,opacity: 1, ease: "sine", duration: 0.5}, )

gsap.set(".ani-careers-6", { y: -20, opacity: 0 });
gsap.set(".ani-careers-7", { y: 20, opacity: 0 });

let aniCareers3 = gsap.timeline({scrollTrigger:{trigger: ".ani-careers-trig-3",start: "top +=1000px"}});
aniCareers3.to(".ani-careers-6", {y: 0,opacity: 1, ease: "sine", duration: 0.5}, )
  .to(".ani-careers-7", {y: 0,opacity: 1, ease: "sine", duration: 0.5})

</script>